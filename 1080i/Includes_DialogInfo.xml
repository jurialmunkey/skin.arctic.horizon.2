<?xml version="1.0" encoding="UTF-8"?>
<includes>

    <!-- Main Group for DialogInfo -->
    <include name="DialogInfo_MainGroup">
        <control type="group">
            <animation effect="fade" start="100" end="0" condition="!String.IsEmpty(Window(Home).Property(TMDBHelper.Recommendations.HideInfo))">Conditional</animation>
            <animation effect="slide" start="0" end="100" time="400" tween="cubic" easing="out" reversible="false" condition="[ControlGroup(4000).HasFocus()]">Conditional</animation>
            <animation effect="slide" end="0" start="100" time="400" tween="cubic" easing="out" reversible="false" condition="![ControlGroup(4000).HasFocus()]">Conditional</animation>
            <visible>!Window.IsVisible(script-tmdbhelper-wikipedia.xml)</visible>
            <animation type="Visible" reversible="false">
                <effect type="fade" start="0" end="100" time="300" delay="400" tween="sine" easing="out"/>
                <effect type="slide" start="-320" end="0" time="400" delay="400" tween="cubic" easing="out" />
            </animation>
            <animation type="Hidden" reversible="false">
                <effect type="fade" start="100" end="0" time="300" tween="sine" easing="out" />
                <effect type="slide" start="0" end="-320" time="300" tween="cubic" easing="out" />
            </animation>
            <nested />
        </control>
    </include>

    <!-- Left Group for DialogInfo -->
    <include name="DialogInfo_LeftGroup">
        <param name="poster_visible">true</param>
        <param name="diffuse">diffuse/poster_w475_h680.png</param>
