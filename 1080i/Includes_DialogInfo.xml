    <!-- Trailer Control Button -->
    <include name="DialogInfo_VideoTrailerControl">
        <param name="onback">5000</param>
        <definition>
            <control type="group">
                <bottom>0</bottom>
                <height>10</height>
                <visible>Player.Seeking | Player.DisplayAfterSeek | Player.Paused</visible>
                <include>Animation_FadeIn</include>
                <include>Animation_FadeOut</include>
                <control type="progress" id="499">
                    <info>Player.SeekBar</info>
                    <height>10</height>
                </control>
                <control type="progress">
                    <height>10</height>
                    <info>Player.SeekBar</info>
                    <texturebg colordiffuse="00ffffff" border="6">progress/progress-bg.png</texturebg>
                    <lefttexture colordiffuse="00ffffff" border="6">progress/progress-left.png</lefttexture>
                    <midtexture colordiffuse="$VAR[ColorGradient]" border="6" diffuse="progress/diffuse.png">progress/progress-end.png</midtexture>
                    <righttexture colordiffuse="$VAR[ColorGradient]" border="6" diffuse="progress/diffuse-end.png">progress/progress-right.png</righttexture>
                    <include content="Defs_Progress_Colorfade">
                        <param name="id" value="499" />
                    </include>
                </control>
            </control>
            <control type="button" id="7001">
                <texturenofocus />
                <texturefocus />

                <oninfo>$PARAM[onback]</oninfo>
                <oninfo>ClearProperty(HasTrailer,Home)</oninfo>
                <oninfo condition="Player.HasVideo">Stop</oninfo>

                <onback>$PARAM[onback]</onback>
                <onback>ClearProperty(HasTrailer,Home)</onback>
                <onback condition="Player.HasVideo">Stop</onback>

                <onclick condition="!Player.HasVideo">SetFocus($PARAM[onback])</onclick>
                <onclick condition="!Player.HasVideo">ClearProperty(HasTrailer,Home)</onclick>
                <onclick condition="Player.HasVideo">PlayerControl(Play)</onclick>

                <onunfocus>SetFocus($PARAM[onback])</onunfocus>
                <onunfocus>ClearProperty(HasTrailer,Home)</onunfocus>
                <onunfocus condition="Player.HasVideo">Stop</onunfocus>

                <onleft condition="!Player.HasVideo">SetFocus($PARAM[onback])</onleft>
                <onleft condition="!Player.HasVideo">ClearProperty(HasTrailer,Home)</onleft>
                <onleft condition="Player.HasVideo">StepBack</onleft>

                <onright condition="!Player.HasVideo">SetFocus($PARAM[onback])</onright>
                <onright condition="!Player.HasVideo">ClearProperty(HasTrailer,Home)</onright>
                <onright condition="Player.HasVideo">StepForward</onright>

                <onup>SetFocus($PARAM[onback])</onup>
                <onup>ClearProperty(HasTrailer,Home)</onup>
                <onup condition="Player.HasVideo">Stop</onup>

                <ondown>SetFocus($PARAM[onback])</ondown>
                <ondown>ClearProperty(HasTrailer,Home)</ondown>
                <ondown condition="Player.HasVideo">Stop</ondown>
            </control>
        </definition>
    </include>

