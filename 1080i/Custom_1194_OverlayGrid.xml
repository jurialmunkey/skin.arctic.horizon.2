<?xml version="1.0" encoding="UTF-8"?>
<window type="dialog" id="1194">
    <zorder>10</zorder>
    <visible>Skin.HasSetting(DebugGrid)</visible>
    <controls>

        <include content="Object_Control" condition="Skin.HasSetting(DebugGrid)">
            <param name="control">group</param>

            <!-- Vertical 40 px lines -->
            <control type="grouplist">
                <itemgap>grid_x04</itemgap>
                <orientation>vertical</orientation>
                <include>Vert_Red_Line_5</include>
                <include>Vert_Red_Line_5</include>
                <include>Vert_Red_Line_5</include>
                <include>Vert_Red_Line_5</include>
                <include>Vert_Red_Line_5</include>
                <include>Vert_Red_Line</include>
                <include>Vert_Red_Line</include>
            </control>

            <!-- Horizontal 40 px lines -->
            <control type="grouplist">
                <itemgap>grid_x04</itemgap>
                <orientation>horizontal</orientation>
                <include>Horz_Red_Line_5</include>
                <include>Horz_Red_Line_5</include>
                <include>Horz_Red_Line_5</include>
                <include>Horz_Red_Line_5</include>
                <include>Horz_Red_Line_5</include>
                <include>Horz_Red_Line_5</include>
                <include>Horz_Red_Line_5</include>
                <include>Horz_Red_Line_5</include>
                <include>Horz_Red_Line_5</include>
                <include>Horz_Red_Line</include>
                <include>Horz_Red_Line</include>
                <include>Horz_Red_Line</include>
            </control>

            <!-- Screen Padding Lines -->
            <control type="image">
                <top>grid_x08</top>
                <height>1</height>
                <texture colordiffuse="red">common/white.png</texture>
            </control>
            <control type="image">
                <bottom>grid_x08</bottom>
                <height>1</height>
                <texture colordiffuse="red">common/white.png</texture>
            </control>
            <control type="image">
                <left>grid_x08</left>
                <width>1</width>
                <texture colordiffuse="red">common/white.png</texture>
            </control>
            <control type="image">
                <right>grid_x08</right>
                <width>1</width>
                <texture colordiffuse="red">common/white.png</texture>
            </control>

            <!-- Outer Border Lines -->
            <control type="image">
                <top>grid_x12</top>
                <height>1</height>
                <texture colordiffuse="red">common/white.png</texture>
            </control>
            <control type="image">
                <bottom>grid_x12</bottom>
                <height>1</height>
                <texture colordiffuse="red">common/white.png</texture>
            </control>

            <!-- Inner Border Lines -->
            <control type="image">
                <top>view_top</top>
                <height>1</height>
                <texture colordiffuse="red">common/white.png</texture>
            </control>
            <control type="image">
                <bottom>view_top</bottom>
                <height>1</height>
                <texture colordiffuse="red">common/white.png</texture>
            </control>

            <!-- View Border Lines -->
            <control type="image">
                <top>grid_x52</top>
                <height>1</height>
                <texture colordiffuse="red">common/white.png</texture>
            </control>
            <control type="image">
                <bottom>grid_x52</bottom>
                <height>1</height>
                <texture colordiffuse="red">common/white.png</texture>
            </control>

            <!-- Trough Lines -->
            <control type="group">
                <height>view_top</height>
                <control type="group">
                    <centertop>50%</centertop>
                    <height>view_bar</height>
                    <control type="image">
                        <top>-grid_x01</top>
                        <height>1</height>
                        <texture colordiffuse="green">common/white.png</texture>
                    </control>
                    <control type="image">
                        <bottom>-grid_x01</bottom>
                        <height>1</height>
                        <texture colordiffuse="green">common/white.png</texture>
                    </control>
                </control>
            </control>
            <control type="group">
                <bottom>0</bottom>
                <height>view_top</height>
                <control type="group">
                    <centertop>50%</centertop>
                    <height>view_bar</height>
                    <control type="image">
                        <top>-grid_x01</top>
                        <height>1</height>
                        <texture colordiffuse="green">common/white.png</texture>
                    </control>
                    <control type="image">
                        <bottom>-grid_x01</bottom>
                        <height>1</height>
                        <texture colordiffuse="green">common/white.png</texture>
                    </control>
                </control>
            </control>

            <!-- Center Lines -->
            <control type="image">
                <centertop>50%</centertop>
                <height>1</height>
                <texture colordiffuse="blue">common/white.png</texture>
            </control>
            <control type="image">
                <centerleft>50%</centerleft>
                <width>1</width>
                <texture colordiffuse="blue">common/white.png</texture>
            </control>

        </include>
    </controls>
</window>