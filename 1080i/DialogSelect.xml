<?xml version="1.0" encoding="UTF-8"?>
<window>
    <defaultcontrol>3</defaultcontrol>
    <onunload>ClearProperty(DialogSelectType,Home)</onunload>
    <controls>
        <include content="Object_Options_Menu" condition="String.IsEqual(Window(Home).Property(DialogSelectType),Menu) + String.IsEmpty(Window(Home).Property(SkinViewtypes.DialogIsActive)) + !Window.IsActive(gamevideofilter) + !Window.IsActive(gamestretchmode) + !Window.IsActive(gamevideorotation) + !Window.IsActive(gamesaves) + !Window.IsActive(ingamesaves)">
            <param name="id" value="3" />
            <param name="header" value="$INFO[Control.GetLabel(1)]" />
            <param name="usegrouplist" value="false" />
            <control type="label" id="1">
                <visible>false</visible>
            </control>
            <include content="List_DialogSelect">
                <param name="id" value="3" />
                <onleft>Back</onleft>
                <onright>Back</onright>
                <top>grid_x12</top>
                <bottom>grid_x02</bottom>
            </include>
        </include>

        <!-- Skip overlay for the gamevideo settings, as we want to see the effect of the option we're choosing next to the dialog -->
        <include condition="String.IsEmpty(Window(Home).Property(DialogSelectType)) + !Window.IsActive(gamevideofilter) + !Window.IsActive(gamestretchmode) + !Window.IsActive(gamevideorotation) + !Window.IsActive(gamesaves) + !Window.IsActive(ingamesaves)">Object_Overlay</include>
        <include content="Dialog_Background" condition="String.IsEmpty(Window(Home).Property(DialogSelectType)) + String.IsEmpty(Window(Home).Property(SkinViewtypes.DialogIsActive)) + !Window.IsActive(gamevideofilter) + !Window.IsActive(gamestretchmode) + !Window.IsActive(gamevideorotation) + !Window.IsActive(gamesaves) + !Window.IsActive(ingamesaves)">
            <include>Animation_SlideIn_Dialog</include>
            <include>Dimension_DialogSelect</include>
            <include content="Object_Control" condition="Window.IsVisible(script-skinshortcuts.xml)">
                <param name="control">group</param>
                <left>grid_x08</left>
                <include>Dialog_Overlay</include>
                <include>Object_Separator</include>
            </include>
            <include>Dialog_Overlay_Buttons</include>
            <include>Dialog_Header</include>
            <include content="Dialog_Header">
                <param name="id" value="9901" />
                <visible>String.IsEmpty(Control.GetLabel(1))</visible>
                <label>$LOCALIZE[424]</label>
            </include>

            <!-- Left Content -->
            <include content="Dialog_Group">
                <control type="group">
                    <right>dialog_button_w</right>
                    <control type="group">
                        <right>grid_x04</right>
                        <include content="List_DialogSelect">
                            <param name="id" value="3" />
                            <left>-grid_x04</left>
                            <pagecontrol>61</pagecontrol>
                            <onright>61</onright>
                        </include>
                        <include content="List_DialogSelect" condition="!Window.IsVisible(script-skinshortcuts.xml)">
                            <param name="id" value="6" />
                            <param name="detailed" value="True" />
                            <param name="item_height" value="grid_x16" />
                            <left>-grid_x04</left>
                            <pagecontrol>62</pagecontrol>
                            <onright>62</onright>
                        </include>
                        <include content="List_DialogSelect" condition="Window.IsVisible(script-skinshortcuts.xml)">
                            <param name="id" value="6" />
                            <param name="itemlayout_include">Layout_SkinShortcuts</param>
                            <left>-grid_x04</left>
                            <pagecontrol>62</pagecontrol>
                            <onright>62</onright>
                        </include>

                        <include content="Dialog_Scrollbar">
                            <onright>9000</onright>
                            <onleft>3</onleft>
                            <visible>Control.IsVisible(3)</visible>
                        </include>
                        <include content="Dialog_Scrollbar">
                            <param name="id" value="62" />
                            <onright>9000</onright>
                            <onleft>6</onleft>
                            <visible>Control.IsVisible(6)</visible>
                        </include>
                    </control>
                </control>
            </include>

            <!-- Right Buttons -->
            <include content="Dialog_Group">
                <control type="group">
                    <right>0</right>
                    <width>dialog_button_w</width>
                    <control type="grouplist" id="9000">
                        <onleft condition="Control.IsVisible(3)">61</onleft>
                        <onleft condition="Control.IsVisible(6)">62</onleft>
                        <itemgap>20</itemgap>
                        <control type="button" id="5" description="OK">
                            <height>grid_x08</height>
                            <visible>Control.IsEnabled(5)</visible>
                        </control>
                        <control type="button" id="7" description="Cancel">
                            <height>grid_x08</height>
                            <visible>Control.IsEnabled(7)</visible>
                        </control>
                        <control type="button" id="8" description="GetMore">
                            <height>grid_x08</height>
                            <visible>Control.IsEnabled(8)</visible>
                            <visible>!Window.IsVisible(script-skinshortcuts.xml)</visible>
                        </control>
                    </control>

                    <control type="group">
                        <visible>!String.IsEmpty(Container(6).ListItem.Icon)</visible>
                        <control type="image">
                            <bottom>0</bottom>
                            <aspectratio aligny="bottom">keep</aspectratio>
                            <texture background="true">$INFO[Container(6).ListItem.Icon]</texture>
                            <visible>![String.StartsWith(Container(6).ListItem.Icon,Default) | String.StartsWith(Container(6).ListItem.Icon,special://skin/extras/icons/) | String.IsEqual(Container(6).ListItem.Icon,thumb)]</visible>
                        </control>
                        <control type="image">
                            <bottom>0</bottom>
                            <aspectratio aligny="bottom">keep</aspectratio>
                            <texture background="true" colordiffuse="dialog_fg_70">$INFO[Container(6).ListItem.Icon]</texture>
                            <visible>[String.StartsWith(Container(6).ListItem.Icon,Default)]</visible>
                        </control>
                    </control>
                </control>
            </include>
        </include>

        <include content="Dialog_Background" condition="!String.IsEmpty(Window(Home).Property(SkinViewtypes.DialogIsActive)) + !Window.IsActive(gamevideofilter) + !Window.IsActive(gamestretchmode) + !Window.IsActive(gamevideorotation) + !Window.IsActive(gamesaves) + !Window.IsActive(ingamesaves)">
            <include>Animation_SlideIn_Dialog</include>
            <centerleft>50%</centerleft>
            <width>1702</width>
            <top>view_top</top>
            <height>720</height>

            <include>Dialog_Header</include>
            <include content="Dialog_Header">
                <param name="id" value="9901" />
                <visible>String.IsEmpty(Control.GetLabel(1))</visible>
                <label>$LOCALIZE[424]</label>
            </include>

            <!-- Image -->
            <control type="group">
                <left>480</left>
                <include>Dialog_Overlay</include>
                <include>Object_Separator</include>
                <include content="Dialog_Group">
                    <control type="image">
                        <texture colordiffuse="ff181818">common/white.png</texture>
                    </control>
                    <control type="image">
                        <aspectratio>scale</aspectratio>
                        <fadetime>300</fadetime>
                        <texture background="true">$INFO[Container(6).ListITem.Icon]</texture>
                    </control>
                    <control type="image">
                        <include content="Dimension_Padding"><param name="pad" value="-10" /></include>
                        <texture colordiffuse="dialog_bg_100" border="20">common/selectbox.png</texture>
                    </control>
                    <control type="image">
                        <include content="Dimension_Padding"><param name="pad" value="-10" /></include>
                        <texture colordiffuse="dialog_panel" border="20">common/selectbox.png</texture>
                    </control>
                </include>
            </control>

            <control type="group">
                <left>0</left>
                <width>480</width>
                <top>grid_x04</top>
                <bottom>grid_x04</bottom>
                <include content="List_DialogSelect">
                    <param name="id" value="3" />
                    <param name="misc">String.IsEqual(Container.ViewMode,ListItem.Label)</param>
                </include>
                <include content="List_DialogSelect">
                    <param name="id" value="6" />
                    <param name="misc">String.IsEqual(Container.ViewMode,ListItem.Label)</param>
                </include>
            </control>
        </include>

        <include content="Dialog_Background" condition="Window.IsActive(gamevideofilter) | Window.IsActive(gamestretchmode) | Window.IsActive(gamevideorotation) | Window.IsActive(gamesaves) | Window.IsActive(ingamesaves)">
            <include>Animation_SlideIn_Dialog</include>
            <include>Dimension_DialogSelectGame</include>

            <include content="Dialog_Nib">
                <param name="use_side_nib">False</param>
            </include>
            <include content="Object_MenuHeader">
                <param name="label" value="$LOCALIZE[5]" />
            </include>

            <include content="Dialog_Group">
                <top>120</top>
                <control type="group">
                    <control type="group">
                        <include content="List_DialogSelect">
                            <param name="id" value="3" />
                            <param name="itemlayout_include">Layout_GameVideoFilterOrView</param>
                            <param name="item_height">grid_x12</param>
                            <left>-grid_x04</left>
                            <right>-grid_x04</right>
                            <pagecontrol>61</pagecontrol>
                            <onright>61</onright>
                        </include>
                        <include content="List_DialogSelect">
                            <param name="id" value="6" />
                            <param name="detailed" value="True" />
                            <param name="item_height" value="grid_x16" />
                            <left>-grid_x04</left>
                            <right>-grid_x04</right>
                            <pagecontrol>62</pagecontrol>
                            <onright>62</onright>
                        </include>
                        <include content="List_DialogSelect">
                            <param name="id" value="10811" />
                            <param name="itemlayout_include">Layout_GameVideoFilterOrView</param>
                            <param name="item_height">grid_x12</param>
                            <left>-grid_x04</left>
                            <right>-grid_x04</right>
                            <pagecontrol>61</pagecontrol>
                            <onright>61</onright>
                            <preloaditems>0</preloaditems>
                        </include>
                        <include content="Dialog_Scrollbar">
                            <onleft>10811</onleft>
                            <visible>Control.IsVisible(10811)</visible>
                        </include>
                    </control>
                </control>
            </include>
        </include>
    </controls>
</window>
