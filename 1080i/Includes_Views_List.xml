                        </include>
                        <viewtype label="$PARAM[viewtype_label]">list</viewtype>
                        <onleft>61</onleft>
                        <onright>menu</onright>
                        <pagecontrol>61</pagecontrol>
                        <onfocus>ClearProperty(TMDbHelper.WidgetContainer)</onfocus>
