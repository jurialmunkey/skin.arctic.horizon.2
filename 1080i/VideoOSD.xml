                        <onclick>ActivateWindow(125)</onclick>
                    </include>
                </control>
                <control type="group">
                    <bottom>20</bottom>
                    <height>160</height>
                    <left>grid_x04</left>
                    <right>grid_x04</right>
                    <control type="image">
                        <centertop>-20</centertop>
                        <height>1</height>
                        <texture colordiffuse="dialog_fg_12">common/white.png</texture>
                    </control>
                    <include content="Dialog_Menu_Button">
