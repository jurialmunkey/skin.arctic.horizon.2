                    <focusedcolor>panel_fg_100</focusedcolor>
                    <shadowcolor>shadow_hard</shadowcolor>
                    <font>font_osd_lang</font>
                    <align>center</align>
                    <aligny>top</aligny>
                    <textoffsetx>0</textoffsetx>
