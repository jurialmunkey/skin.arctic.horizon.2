                    <param name="autoclose" value="true" />
                    <param name="visible" value="true" />
                    <param name="icon" value="osd/settings.png" />
                    <param name="visible" value="true" />
                    <param name="id" value="6800" />
                    <param name="groupid" value="6899" />
                    <onup>7800</onup>
